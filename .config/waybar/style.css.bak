* {
  all: unset;
  font-family:
    JetBrainsMono Nerd Font,
    monospace;
  font-size: 1.05rem; /* 14px */
}

#waybar {
  background-color: transparent;
}

tooltip {
  background-color: #121212;
  padding: 1rem;
  border-radius: 1.5rem;
}

#custom-swaync,
#workspaces,
#tray,
#battery,
#clock {
  background-color: #121212;
  margin: 0.35rem 0.5rem 0 0.35rem;
  border-radius: 2rem;
}

.modules-left {
  margin-top: 0.5rem;
}

.modules-right {
  margin-bottom: 0.5rem;
}

#workspaces {
  padding: 0.2rem 0;
}

#workspaces button {
  padding: 0.9rem 1.4rem;
  border-radius: 1.5rem;
  color: #ffffff;
  transition-duration: 0.2s;
  margin: 0.1rem 0.25rem;
}

#workspaces button:hover {
  background-color: #ffffff;
  color: #000000;
}

#workspaces button.active {
  background-image: linear-gradient(90deg, #ccaaff, #aaccff);
  color: #000000;
}

#workspaces button.empty {
  color: #404040;
}

#tray {
  padding: 1rem 0.15rem;
}

#battery {
  padding: 1rem 0.15rem;
}

#clock {
  font-weight: bold;
  padding: 2rem 0;
}

#custom-swaync {
  font-family: JetBrainsMono Nerd Font Mono;
  font-size: 1.8rem;
  padding: 0.7rem 0;
}
